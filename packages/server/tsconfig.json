{
  "compilerOptions": {
    "module": "ES2022",
    "target": "ES2022",

    "strict": true,

    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "allowJs": false,

    "keyofStringsOnly": true,
    "esModuleInterop": true,
    "incremental": true,

    "moduleResolution": "Node16",
    "resolveJsonModule": true,

    "noUnusedLocals": false,
    "removeComments": true,
    "noLib": false,
    "forceConsistentCasingInFileNames": true,

    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true
  },
  "include": ["src"]
}
